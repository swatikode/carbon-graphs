{
  "name": "@cerner/carbon-graphs",
  "description": "A graphing library built using d3 based on Cerner design standards",
  "version": "1.7.0",
  "author": "Cerner Corporation",
  "browserslist": [
    "Android >= 4",
    "Chrome >= 35",
    "Firefox >= 31",
    "Explorer >= 9",
    "iOS >= 7",
    "Safari >= 7.1"
  ],
  "bugs": "https://github.com/cerner/carbon-graphs/issues",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-case": [
        0,
        "always",
        "start-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "Fix",
          "Chore",
          "New",
          "Docs",
          "Breaking",
          "Upgrade",
          "Update",
          "Build",
          "Revert"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "start-case"
      ]
    }
  },
  "dependencies": {
    "d3": "^3.5.17"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-classes": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@cerner/carbon-site-helpers": "^1.1.0",
    "@cerner/svg-to-carbon": "^1.1.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@semantic-release/git": "^7.0.16",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-minify-replace": "^0.5.0",
    "babel-preset-minify": "^0.5.1",
    "conventional-changelog-eslint": "^3.0.1",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.7",
    "docdash": "^1.1.1",
    "eslint": "^5.16.0",
    "eslint-plugin-ideal": "^0.1.3",
    "eslint-plugin-jsdoc": "^15.8.3",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.4",
    "jasmine-core": "^3.4.0",
    "jsdoc": "^3.6.3",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^2.0.1",
    "karma-parallel": "^0.3.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "less": "^3.10.1",
    "less-loader": "^5.0.0",
    "loader-utils": "^1.2.3",
    "mini-css-extract-plugin": "^0.6.0",
    "one-cerner-style-icons": "github:cerner/one-cerner-style-icons",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "puppeteer": "^1.19.0",
    "rimraf": "^2.7.1",
    "semantic-release": "^15.13.21",
    "sinon": "^7.4.1",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.7.1",
    "webpack-merge": "^4.1.5"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist",
    "lib",
    "README.md"
  ],
  "homepage": "https://engineering.cerner.com/carbon-graphs/",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run style && git add -u",
      "pre-push": "npm run lint"
    }
  },
  "keywords": [
    "carbon",
    "carbon-graphs",
    "d3",
    "d3-module",
    "graphing",
    "graphs"
  ],
  "license": "Apache-2.0",
  "main": "lib/js/carbon-graphs.js",
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "tabWidth": 2,
          "printWidth": 250
        }
      }
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cerner/carbon-graphs.git"
  },
  "scripts": {
    "build": "webpack --config ./build/webpack/webpack.config.js --env.TYPE=LIB",
    "build:dist": "webpack --config ./build/webpack/webpack.config.js --env.TYPE=DIST",
    "build:site": "npm run docs && webpack --config ./build/webpack/site.webpack.js --env.TYPE=SITE",
    "clean": "rimraf dist lib",
    "dev": "node ./build/webpack/dev-server.js",
    "docs": "node_modules/.bin/jsdoc -c jsdoc.json",
    "lint": "npm run lint:source && npm run lint:styles && npm run docs",
    "lint:fix": "eslint src --color --fix",
    "lint:source": "eslint src dev --color --max-warnings 0",
    "lint:styles": "stylelint src/main/less/**/*.less",
    "prepublishOnly": "npm run clean && npm run build && npm run build:dist",
    "style": "prettier \"src/**/*.*\" \"dev/**/*.*\" \"docs/**/*.md*\" --write",
    "test": "karma start ./build/karma/karma.config.js --single-run --no-auto-watch",
    "test:persist": "karma start ./build/karma/karma.config.js --no-single-run"
  }
}
